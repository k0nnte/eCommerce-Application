{
    "compilerOptions": {
      "strict": true,
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "ES2020",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      }
  }